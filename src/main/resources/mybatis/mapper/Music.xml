<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eco.dao.MusicDao">

	<select id="listBundleForMain" resultType="com.eco.dto.Bundle">
		select * from bundle_master
	</select>

	<select id="listByBundle" resultType="com.eco.dto.Music">
		select bd.bdseq, m.* from bundle_detail bd
			left join music m on m.mseq = bd.mseq
		where bd.bmseq = #{param1}
		order by bd.bdseq
	</select>
	    
</mapper>